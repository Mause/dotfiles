[user]
	name = Elliana May
	email = me@mause.me
[color]
	diff = auto
	ui = auto
[alias]
	stat = status --short --branch --ahead-behind
	lsd = log --graph --decorate --pretty=oneline --abbrev-commit --all
	changed = log ORIG_HEAD..HEAD
 	whitespace = !git diff -U0 -w --no-color | git apply --cached --ignore-whitespace --unidiff-zero -
	undo = reset --soft HEAD^
	tag-verbose = tag --format='%(color:bold cyan)== %(refname:short) ==%(if)%(object)%(then)%0aTag Hash: %(objectname)%0aTag Date: %(taggerdate:iso-local)%0a  Commit: %(object) %0a%0a%(contents)%(else)%0a(lightweight tag)%0a  Commit: %(objectname)%(end)%0a'
	append = town append
	prepend = town prepend
	propose = town propose
	sync = town sync
[push]
	autoSetupRemote = true
[core]
	editor = vim
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RF
[init]
	defaultBranch = main
[pull]
	rebase = false
[fetch]
	prune = true
	pruneTags = true
	showForcedUpdates = true
[merge]
	conflictStyle = zdiff3
	tool = nvimdiff
[rebase]
	autoSquash = true
[commit]
	verbose = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[interactive]
	diffFilter = diff-so-fancy --patch
[diff]
	tool = nvimdiff
[git-town]
	main-branch=main
	new-branch-type=feature
	sync-feature-strategy=rebase
	sync-prototype-strategy=rebase
	github-connector = gh
